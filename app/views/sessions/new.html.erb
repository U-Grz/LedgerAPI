<div class="max-w-md mx-auto mt-8">
  <h1 class="text-2xl font-bold mb-6">Log In</h1>

  <%= form_with url: login_path, local: true do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "block text-sm font-medium mb-2" %>
      <%= f.email_field :email, class: "w-full px-3 py-2 border rounded-lg", autofocus: true %>
    </div>

    <div class="mb-6">
      <%= f.label :password, class: "block text-sm font-medium mb-2" %>
      <%= f.password_field :password, class: "w-full px-3 py-2 border rounded-lg" %>
    </div>

    <div class="mb-4">
      <%= f.submit "Log In", class: "w-full bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 cursor-pointer" %>
    </div>
  <% end %>

  <p class="text-center text-sm">
    Don't have an account? <%= link_to "Sign up", signup_path, class: "text-blue-600 hover:underline" %>
  </p>
</div>